<div class="row">
  <div class="col-md-12">
    <h2>Log In</h2>
    <hr />
    <br />
    {{#if errorMessage}}
      <div class="alert alert-danger">
        <strong>Error: </strong>
        {{errorMessage}}
      </div>
    {{/if}}
    <form method="post" action="/login">
      <fieldset>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <input
                class="form-control"
                id="emailOrUserName"
                name="emailOrUserName"
                type="text"
                placeholder="User Name / Email"
                value="{{userName}}"
                autofocus
                required
              />
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <input
                class="form-control"
                id="password"
                name="password"
                type="password"
                placeholder="Password"
                required
              />
            </div>
          </div>
        </div>
      </fieldset>
      <hr />
      <input
        type="submit"
        class="btn btn-success pull-right"
        value="Login"
      /><br /><br /><br />
    </form>
  </div>
</div>