<div class="row">
  <div class="col-md-12">
    <h2>Categories</h2>
    <hr />

    <a href="/categories/add" class="btn btn-success pull-right">Add Category</a>
    {{#if categories.length}}
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Category Id</th>
              <th scope="col">Category Name</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            {{#each categories}}
              <tr>
                <th scope="row"><a
                    href="/posts?category={{this.id}}"
                  >{{this.id}}</a></th>
                <td><a
                    href="/posts?category={{this.id}}"
                  >{{this.category}}</a></td>
                <td><a
                    href="/categories/delete/{{this.id}}"
                    class="btn btn-danger"
                  >Remove</a></td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{else}}
      <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
      </div>
    {{/if}}
  </div>
</div>