<div class="row">
  <div class="col-md-12">
    <h2>Posts</h2>
    <hr />
    <a href="/posts/add" class="btn btn-success pull-right">Add Post</a>
    {{#if posts}}
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Post Id</th>
              <th scope="col">Title</th>
              <th scope="col">Post Date</th>
              <th scope="col">Category</th>
              <th scope="col">Published</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            {{#each posts}}
              <tr>
                <th scope="row">{{this.id}}</th>
                <td>{{this.title}}</td>
                {{!-- ? <td>{{this.postDate}}</td> this is replace by formatDate helper method provided --}}
                <td>{{#formatDate this.postDate}}{{/formatDate}}</td>
                <td><a
                    href="/posts?category={{this.category}}"
                  >{{this.category}}</a></td>
                <td>{{this.published}}</td>
                <td><a
                    href="/posts/delete/{{this.id}}"
                    class="btn btn-danger"
                  >Remove</a></td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{else}}
      <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
      </div>
    {{/if}}
  </div>
</div>